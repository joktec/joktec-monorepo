{
  "name": "joktec",
  "description": "JokTec - Monorepo with Lerna template",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "author": "JokTec",
  "homepage": "https://github.com/joktec/joktec-monorepo.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/joktec/joktec-monorepo.git"
  },
  "engines": {
    "node": ">=14"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "keywords": [
    "microservices",
    "monorepo",
    "lerna",
    "nx"
  ],
  "scripts": {
    "postinstall": "chmod u+x ./bin/* && husky install",
    "ls": "lerna ls -la && nx print-affected",
    "dev": "lerna run dev",
    "build": "lerna run build",
    "serve": "lerna run serve",
    "test": "lerna run test",
    "e2e": "lerna run e2e",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "clean": "lerna run clean",
    "purge": "lerna run purge && rimraf -rf ./node_modules",
    "dep:upgrade": "lerna run dep:upgrade && yarn",
    "graph": "nx affected:graph",
    "release": "lerna version",
    "publish:dev": "lerna publish patch --exact --no-private --yes",
    "publish:stag": "lerna publish minor --exact --no-private --yes",
    "publish:prod": "lerna publish major --exact --no-private --yes",
    "deploy:dev": "lerna run deploy -- --ns joktec-develop --helm helm",
    "deploy:stag": "lerna run deploy -- --ns joktec-staging --helm helm",
    "deploy:prod": "lerna run deploy -- --ns joktec-production --helm helm",
    "ci": "bin/jenkin-ci.sh"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "lerna": "^5.6.2",
    "lint-staged": "^13.0.3",
    "npm-check-updates": "^16.3.11",
    "nx": "^14.8.3",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-immutable": "^5.5.2",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "**/node_modules/cz-conventional-changelog"
    }
  }
}
