{
  "name": "joktec",
  "description": "JokTec - Monorepo with Lerna template",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "author": "JokTec",
  "homepage": "https://github.com/joktec/joktec-monorepo.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/joktec/joktec-monorepo.git"
  },
  "engines": {
    "node": ">=14"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "keywords": [
    "microservices",
    "monorepo",
    "lerna",
    "nx"
  ],
  "scripts": {
    "postinstall": "husky install",
    "ls": "lerna ls -la && nx print-affected",
    "relp": "lerna run relp",
    "dev": "lerna run dev",
    "build": "lerna run build",
    "serve": "lerna run serve",
    "test": "lerna run test",
    "test:cov": "lerna run test:cov",
    "test:e2e": "lerna run test:e2e",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "clean": "lerna run clean",
    "purge": "lerna run purge && rimraf -rf ./node_modules",
    "dep:upgrade": "lerna run dep:upgrade",
    "graph": "nx affected:graph",
    "release": "lerna version",
    "publish:dev": "lerna publish patch --exact --no-private --yes",
    "publish:stag": "lerna publish minor --exact --no-private --yes",
    "publish:prod": "lerna publish major --exact --no-private --yes",
    "deploy:dev": "lerna run deploy -- --ns joktec-develop --helm helm",
    "deploy:stag": "lerna run deploy -- --ns joktec-staging --helm helm",
    "deploy:prod": "lerna run deploy -- --ns joktec-production --helm helm",
    "ci": "bin/jenkin-ci.sh"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.4",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^46.7.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-mock": "^29.7.0",
    "lerna": "^8.1.2",
    "lerna-update-wizard": "^1.1.2",
    "lint-staged": "^14.0.1",
    "npm-check-updates": "^16.14.15",
    "nx": "^18.0.6",
    "nx-cloud": "^18.0.0",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "config": {
    "commitizen": {
      "path": "**/node_modules/cz-conventional-changelog"
    }
  }
}
