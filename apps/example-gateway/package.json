{
  "name": "@joktec/gateway",
  "description": "JokTec - Example Gateway",
  "version": "0.0.0",
  "author": "JokTec",
  "private": true,
  "license": "MIT",
  "files": [
    "dist",
    "bin",
    "config.yml",
    "migrations",
    "k8s",
    "Dockerfile"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "clean": "rimraf -rf dist",
    "purge": "rimraf -rf dist node_modules",
    "format": "prettier \"./src/**/*.ts\" --ignore-path ./.prettierignore --write",
    "lint": "eslint --fix \"./src/**/*.ts\"",
    "prebuild": "rimraf dist",
    "prepublishOnly": "yarn build",
    "relp": "nest start --watch -p tsconfig.json --entryFile repl",
    "dev": "nest start --watch -p tsconfig.json",
    "build": "nest build -p tsconfig.json",
    "start": "node dist/main",
    "dep:upgrade": "ncu -p yarn -f /^@joktec*/ -u",
    "deploy": "publish-helm --chart-dir ./k8s/chart",
    "test": "echo 'Test done.'",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seed": "node dist/app.seeder",
    "seed:refresh": "node dist/app.seeder --refresh"
  },
  "dependencies": {
    "@joktec/core": "^0.0.128",
    "@joktec/cacher": "^0.0.72",
    "@joktec/http": "^0.0.130",
    "@joktec/mailer": "^0.0.127",
    "@joktec/mongo": "^0.0.164",
    "@joktec/firebase": "^0.0.46",
    "@joktec/storage": "^0.0.129",
    "nestjs-i18n": "^10.4.0",
    "byte-length": "^1.0.2",
    "gravatar": "^1.8.2",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.35",
    "moment": "^2.29.4",
    "pino-mongodb": "^4.3.0",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/gravatar": "^1.8.6",
    "@types/lodash": "^4.14.202",
    "@types/mime-types": "^2.1.4",
    "nestjs-seeder": "^0.3.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --ignore-path ./.prettierignore",
      "eslint --fix"
    ]
  },
  "jest": {
    "passWithNoTests": true,
    "preset": "ts-jest",
    "rootDir": "src",
    "transform": {
      "^.+\\.(t|s)s$": "ts-jest"
    },
    "coverageDirectory": "<rootDir>/../coverage/",
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/index.ts",
      "!**/*.{d,enum}.ts"
    ]
  },
  "gitHead": "b74397663527dd2bd67714cddaefe03c1b9112d2"
}
