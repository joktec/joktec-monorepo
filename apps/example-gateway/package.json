{
  "name": "@joktec/gateway",
  "description": "JokTec - Example Gateway",
  "version": "0.0.0",
  "author": "JokTec",
  "private": true,
  "license": "MIT",
  "files": [
    "dist",
    "bin",
    "config.yml",
    "migrations",
    "k8s",
    "Dockerfile"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "clean": "rimraf -rf dist",
    "purge": "rimraf -rf dist node_modules",
    "format": "prettier \"./src/**/*.ts\" --ignore-path ./.prettierignore --write",
    "lint": "eslint --fix \"./src/**/*.ts\"",
    "prebuild": "rimraf dist",
    "prepublishOnly": "yarn build",
    "relp": "nest start --watch -p tsconfig.json --entryFile repl",
    "dev": "nest start --watch -p tsconfig.json",
    "build": "nest build -p tsconfig.json",
    "start": "node dist/main",
    "dep:upgrade": "ncu -p yarn -f /^@joktec*/ -u",
    "deploy": "publish-helm --chart-dir ./k8s/chart",
    "test": "echo 'Test done.'",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@joktec/core": "0.1.4",
    "@joktec/cacher": "0.1.4",
    "@joktec/cron": "0.1.4",
    "@joktec/http": "0.1.4",
    "@joktec/kafka": "0.1.6",
    "@joktec/mailer": "0.1.4",
    "@joktec/mongo": "0.1.6",
    "@joktec/mysql": "0.1.5",
    "@joktec/firebase": "0.1.4",
    "@joktec/rabbit": "0.1.6",
    "@joktec/redcast": "0.0.4",
    "@joktec/storage": "0.1.4",
    "@joktec/sqs": "^0.0.1",
    "apple-signin-auth": "^1.7.6",
    "dayjs": "^1.11.13",
    "nestjs-i18n": "^10.5.1",
    "gravatar": "^1.8.2",
    "lodash": "^4.17.21",
    "rxjs": "^7.8.2",
    "pino-mongodb": "^4.3.0"
  },
  "devDependencies": {
    "@types/gravatar": "^1.8.6",
    "@types/lodash": "^4.17.9"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --ignore-path ./.prettierignore",
      "eslint --fix"
    ]
  },
  "jest": {
    "passWithNoTests": true,
    "preset": "ts-jest",
    "rootDir": "src",
    "transform": {
      "^.+\\.(t|s)s$": "ts-jest"
    },
    "coverageDirectory": "<rootDir>/../coverage/",
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/index.ts",
      "!**/*.{d,enum}.ts"
    ]
  },
  "gitHead": "b74397663527dd2bd67714cddaefe03c1b9112d2"
}
