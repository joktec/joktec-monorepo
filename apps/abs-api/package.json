{
  "name": "@abs/api",
  "description": "ABS - API Service",
  "version": "0.0.0",
  "author": "Bao Tran",
  "private": true,
  "license": "MIT",
  "files": [
    "dist",
    "config.yml",
    "migrations",
    "k8s",
    "Dockerfile",
    "public"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "clean": "rimraf -rf dist",
    "purge": "rimraf -rf node_modules",
    "format": "prettier \"./src/**/*.ts\" --ignore-path ./.prettierignore --write",
    "lint": "eslint --fix \"./src/**/*.ts\"",
    "prebuild": "yarn clean",
    "prepublishOnly": "yarn build",
    "dev": "nest start --watch -p tsconfig.json",
    "build": "nest build -p tsconfig.json",
    "serve": "node dist/main",
    "dep:upgrade": "ncu -p yarn -u",
    "deploy": "publish-helm --chart-dir ./k8s/chart",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seed": "node dist/app.seeder",
    "seed:refresh": "node dist/app.seeder --refresh"
  },
  "dependencies": {
    "@joktec/core": "^0.0.83",
    "@joktec/http": "^0.0.85",
    "@joktec/mongo": "^0.0.107",
    "@joktec/storage": "^0.0.83",
    "dot-object": "^2.1.4",
    "gravatar": "^1.8.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "ms": "^2.1.3",
    "url-parse": "^1.5.10"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/dot-object": "^2.1.2",
    "@types/gravatar": "^1.8.3",
    "@types/lodash": "^4.14.197",
    "nestjs-seeder": "^0.3.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --ignore-path ./.prettierignore",
      "eslint --fix"
    ]
  },
  "jest": {
    "passWithNoTests": true,
    "preset": "ts-jest",
    "rootDir": "src",
    "transform": {
      "^.+\\.(t|s)s$": "ts-jest"
    },
    "coverageDirectory": "<rootDir>/../coverage/",
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/index.ts",
      "!**/*.{d,enum}.ts"
    ]
  }
}
