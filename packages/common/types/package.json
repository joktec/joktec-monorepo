{
  "name": "@joktec/types",
  "description": "JokTec - Types",
  "version": "0.0.0",
  "author": "JokTec",
  "private": true,
  "license": "MIT",
  "files": [
    "dist",
    "bin"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "clean": "rimraf -rf dist",
    "purge": "rimraf -rf dist node_modules",
    "format": "prettier \"./src/**/*.ts\" --ignore-path ./.prettierignore --write",
    "lint": "eslint --fix \"./src/**/*.ts\"",
    "prebuild": "rimraf dist",
    "dep:upgrade": "ncu -p yarn -f /^@joktec*/ -u",
    "build": "npx tsc -p tsconfig.json && node dist/main"
  },
  "dependencies": {
    "@joktec/alert": "^0.2.4",
    "@joktec/arango": "^0.2.4",
    "@joktec/bigquery": "^0.2.4",
    "@joktec/cacher": "^0.2.4",
    "@joktec/core": "^0.2.4",
    "@joktec/cron": "^0.2.6",
    "@joktec/elastic": "^0.2.5",
    "@joktec/file": "^0.2.4",
    "@joktec/firebase": "^0.2.4",
    "@joktec/http": "^0.2.5",
    "@joktec/kafka": "^0.2.4",
    "@joktec/mailer": "^0.2.4",
    "@joktec/mongo": "^0.2.9",
    "@joktec/mysql": "^0.2.4",
    "@joktec/notifier": "^0.2.4",
    "@joktec/rabbit": "^0.2.4",
    "@joktec/redcast": "^0.1.8",
    "@joktec/storage": "^0.2.6",
    "@joktec/sqs": "^0.1.7",
    "ts-json-schema-generator": "^1.5.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --ignore-path ./.prettierignore",
      "eslint --fix"
    ]
  },
  "jest": {
    "passWithNoTests": true,
    "preset": "ts-jest",
    "rootDir": "src",
    "transform": {
      "^.+\\.(t|s)s$": "ts-jest"
    },
    "coverageDirectory": "<rootDir>/../coverage/",
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/index.ts",
      "!**/*.{d,enum}.ts"
    ]
  }
}
