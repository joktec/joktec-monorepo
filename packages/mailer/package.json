{
  "name": "@joktec/mailer",
  "description": "JokTec - Mailer Service",
  "version": "0.0.7",
  "private": false,
  "license": "MIT",
  "author": "JokTec",
  "homepage": "https://github.com/joktec/joktec-monorepo.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/joktec/joktec-monorepo.git",
    "directory": "packages/mailer"
  },
  "main": "dist/index",
  "types": "dist/index",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "mail servive",
    "mailgun",
    "sendgrid",
    "handlebars",
    "template",
    "nodemailer"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "purge": "rm -rf node_modules",
    "dev": "rollup -cw",
    "prebuild": "yarn clean",
    "build": "nest build -p tsconfig.json",
    "prepublishOnly": "yarn build",
    "format": "prettier \"./src/**/*.ts\" --ignore-path ./.prettierignore --write",
    "lint": "eslint --fix \"./src/**/*.ts\"",
    "dep:upgrade": "ncu -p yarn -f /^@joktec*/ -u"
  },
  "dependencies": {
    "@joktec/core": "0.0.7",
    "@sendgrid/client": "^7.7.0",
    "@sendgrid/helpers": "^7.7.0",
    "aws-sdk": "^2.1267.0",
    "handlebars": "^4.7.7",
    "lodash": "^4.17.21",
    "mailgun-js": "^0.22.0",
    "nodemailer": "^6.9.1"
  },
  "devDependencies": {
    "@types/mailgun-js": "^0.22.12",
    "@types/nodemailer": "^6.4.7"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --ignore-path ./.prettierignore",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "gitHead": "b74397663527dd2bd67714cddaefe03c1b9112d2"
}
