{
  "name": "@joktec/types",
  "description": "JokTec - Types",
  "version": "0.0.0",
  "author": "JokTec",
  "private": true,
  "license": "MIT",
  "files": [
    "dist",
    "bin"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "clean": "rimraf -rf dist node_modules",
    "format": "prettier \"./src/**/*.ts\" --ignore-path ./.prettierignore --write",
    "lint": "eslint --fix \"./src/**/*.ts\"",
    "prebuild": "rimraf dist",
    "build": "npx tsc -p tsconfig.json && node dist/main"
  },
  "dependencies": {
    "@joktec/core": "^0.0.94",
    "@joktec/http": "^0.0.96",
    "@joktec/mailer": "^0.0.93",
    "@joktec/mongo": "^0.0.120",
    "@joktec/firebase": "^0.0.12",
    "@joktec/storage": "^0.0.94",
    "ts-json-schema-generator": "^1.4.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --ignore-path ./.prettierignore",
      "eslint --fix"
    ]
  },
  "jest": {
    "passWithNoTests": true,
    "preset": "ts-jest",
    "rootDir": "src",
    "transform": {
      "^.+\\.(t|s)s$": "ts-jest"
    },
    "coverageDirectory": "<rootDir>/../coverage/",
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/index.ts",
      "!**/*.{d,enum}.ts"
    ]
  }
}
