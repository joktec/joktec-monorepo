{
  "name": "@joktec/mailer",
  "description": "JokTec - Mailer Service",
  "version": "0.2.5",
  "private": false,
  "license": "MIT",
  "author": "JokTec",
  "homepage": "https://github.com/joktec/joktec-monorepo.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/joktec/joktec-monorepo.git",
    "directory": "packages/mailer"
  },
  "main": "dist/index",
  "types": "dist/index",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "mail servive",
    "mailgun",
    "sendgrid",
    "handlebars",
    "template",
    "nodemailer"
  ],
  "scripts": {
    "clean": "rimraf -rf dist",
    "purge": "rimraf -rf dist node_modules",
    "prebuild": "yarn clean",
    "build": "nest build -p tsconfig.json",
    "prepublishOnly": "yarn build",
    "format": "prettier \"./src/**/*.ts\" --ignore-path ./.prettierignore --write",
    "lint": "eslint --fix \"./src/**/*.ts\"",
    "dep:upgrade": "ncu -p yarn -u",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@joktec/core": "0.2.5",
    "@joktec/utils": "0.1.1",
    "ejs": "^3.1.10",
    "handlebars": "^4.7.8",
    "lodash": "^4.17.21",
    "nodemailer": "^6.10.0",
    "preview-email": "^3.1.0",
    "pug": "^3.0.3"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/nodemailer": "^6.4.17",
    "@types/preview-email": "^3.1.0",
    "@types/pug": "^2.0.10"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --ignore-path ./.prettierignore",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "passWithNoTests": true,
    "preset": "ts-jest",
    "rootDir": "src",
    "transform": {
      "^.+\\.(t|s)s$": "ts-jest"
    },
    "coverageDirectory": "<rootDir>/../coverage/",
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/index.ts",
      "!**/*.{d,enum}.ts"
    ]
  },
  "gitHead": "5c13d4ee8ca290e9f0f98482f014c818faf98e42"
}
